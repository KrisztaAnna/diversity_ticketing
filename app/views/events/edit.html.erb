<% provide :title, t('.edit_event') %>

<p class="breadcrumb">
  <%= link_to t('.home_link'), root_path %> >
  <%= breadcrumb_link_according_to_user_status %> >
  <%=t('.edit_event') %>
</p>

<h1 class="page-title"><span class="page-title-firstword"><%= t('.edit') %></span> <%= @event.name %></h1>

<% if @event.errors.any? %>
  <div class="error">
    <p><%= pluralize(@event.errors.count, "error", "errors") %><%= t('.errors') %> </p>

    <ul>
      <% @event.errors.messages.each do |field, messages| %>
        <li><%= @event.class.human_attribute_name(field) %> <%= join_messages(messages) %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= render partial: "form", locals: {submit_tag_text: t('.submit_changes'), form_url: event_path(@event)} %>

<% provide :title, t('.title') %>

<p class="breadcrumb">
  <%= link_to t('.home_link'), root_path %> >
  <%= t('.title') %>
</p>

<%= render 'event_search', search_path: past_events_path %>

<p><%= t('.past_events_thanks') %></p>

<div class="two-columns">
  <% @events.each do |event| %>
    <%= render partial: "index_list_item", locals: { event: event } %>
  <% end %>
</div>

<%= link_to t('.show_upcoming_events'), events_path %>

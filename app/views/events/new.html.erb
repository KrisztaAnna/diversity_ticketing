<% provide :title, t('.title') %>

<p class="breadcrumb">
  <%= link_to t('.home_link'), root_path %> >
  <%= link_to t('.events'), events_path %> >
  <%= t('new_event') %>
</p>

<h1 class="page-title"><span class="page-title-firstword"><%= raw t('.create_new_event') %></h1>
<p class="page-description"><%= t('.please_fill') %></p>

<% if @event.errors.any? %>
  <div class="error">
    <p><%= pluralize(@event.errors.count, "error", "errors") %> <%=t('.errors') %></p>

    <ul>
      <% @event.errors.messages.each do |field, messages| %>
        <li><%= @event.class.human_attribute_name(field) %> <%= join_messages(messages) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render partial: "form", locals: {submit_tag_text: t('.preview_event'), form_url: event_preview_path} %>
